<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/room_card_width"
    android:layout_height="@dimen/room_card_height"
    android:layout_margin="@dimen/margin_large">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_room_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@string/image"
            android:src="@drawable/room_test_1"
            android:tint="@color/transparency" />

        <TextView
            android:id="@+id/tv_room_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iv_room_card"
            android:fontFamily="@font/tokens_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:text="@string/room_test"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/iv_room_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/image"
            android:padding="@dimen/padding_small"
            android:src="@drawable/dots" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>