<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/item_card_width"
            android:layout_height="@dimen/item_card_height">

            <ImageView
                android:id="@+id/iv_item_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop"
                android:src="@drawable/room_test_1" />

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/tokens_bold"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="@string/item_test"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/tv_item_piece"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/iv_item_menu"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/tokens_normal"
                    android:padding="@dimen/padding_small"
                    android:text="@string/item_test"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/iv_item_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorPrimary"
                    android:contentDescription="@string/image"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/dots" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/tokens_normal"
                android:padding="@dimen/padding_small"
                android:text="@string/item_test"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>